{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "commonjs", 
      "target": "es6",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "declaration": true,
      "sourceMap": true,
      "rootDir": "./src",
      "skipLibCheck": true

    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  